@model WsRecharge.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}
<div class="row">
    <div class="col-md-3">&nbsp;</div>
    <div class="col-md-6">
        <div class="panel panel-color panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Change Password</h3>
            </div>
            <form id="frmFundTransfer" method="post" action="~/Manage/ChangePassword">
                <div class="panel-body">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="AccountTo">Current Password:</label>
                                <input class="form-control" id="OldPassword" name="OldPassword" placeholder="Old Password" type="password">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="Mobile">New Password:</label>
                                <input class="form-control" id="NewPassword" name="NewPassword" placeholder="New Password" type="password">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="up_fundbalance">Confirm Password:</label>
                                <input class="form-control" id="ConfirmPassword" name="ConfirmPassword" placeholder="Confirm Password" type="password">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" value="Change password" class="btn btn-custom" />
                </div>
            </form>
        </div>
    </div>
</div>
